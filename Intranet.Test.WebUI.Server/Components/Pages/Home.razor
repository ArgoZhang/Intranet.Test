@page "/"

<PageTitle>Intranet</PageTitle>

<div class="my-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <Select DisplayText="Select test"
                            ShowLabel="true"
                            Items="_items"
                            @bind-Value="_value"
                            IsClearable="false" />
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? _value;
    private IEnumerable<SelectedItem> _items = [
            new SelectedItem("", "Please select..."),
            new SelectedItem("1", "One"),
            new SelectedItem("2", "Two"),
            new SelectedItem("3", "Three"),
    ];
}